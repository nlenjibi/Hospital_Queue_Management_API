      "endpoint": "/notifications/notifications/",
      "method": "GET",
      "request": {
        "headers": {"Authorization": "Bearer <token>"},
        "params": {"type": "queue_update", "status": "sent", "unread": "true"}
      },
      "response": {
        "status": 200,
        "body": [
          {
            "id": 1,
            "type": "queue_update",
            "channel": "sms",
            "title": "Queue Update",
            "message": "You are now number 2 in the queue.",
            "status": "sent",
            "sent_at": "2025-08-28T09:00:00Z",
            "delivered_at": "2025-08-28T09:01:00Z",
            "read_at": null,
            "is_read": false,
            "retry_count": 0,
